{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "Datastash - Sources",
    "Parameters": {
    },
    "Resources": {
        "Role": {
            "Type": "AWS::IAM::Role",
            "Properties": {
                "Path": "/",
                "AssumeRolePolicyDocument": {
                    "Statement": [
                        {
                            "Action": "sts:AssumeRole",
                            "Effect": "Allow",
                            "Principal": {
                                "Service": [ "ec2.amazonaws.com" ]
                            }
                        }
                    ]
                }
            }
        },
        "DescribeInstancesPolicy": {
            "Type": "AWS::IAM::Policy",
            "Properties": {
                "PolicyName": "ec2-describeinstances",
                "PolicyDocument": {
                    "Statement": [
                        {
                            "Action": "ec2:DescribeInstances",
                            "Effect": "Allow",
                            "Resource": "*"
                        }
                    ]
                },
                "Roles": [ { "Ref": "Role" } ]
            }
        },
        "InstanceProfile": {
            "Type": "AWS::IAM::InstanceProfile",
            "Properties": {
                "Path": "/",
                "Roles": [ { "Ref": "Role" } ]
            }
        },
        "AutoscalingGroup": {
            "Type": "AWS::AutoScaling::AutoScalingGroup",
            "Properties": {
                "AvailabilityZones": { "Fn::GetAZs": "" },
                "LaunchConfigurationName": { "Ref": "LaunchConfig" },
                "MinSize": "1",
                "MaxSize": "2",
                "DesiredCapacity": "1",
		"TerminationPolicies": [ "OldestInstance" ],
                "HealthCheckType": "EC2",
                "HealthCheckGracePeriod": 120,
                "LoadBalancerNames": [ ],
                "Tags": [
                    {
                        "Key": "Stack",
                        "Value": "datastash",
                        "PropagateAtLaunch": "true"
                    },
                    {
                        "Key": "App",
                        "Value": "sources",
                        "PropagateAtLaunch": "true"
                    }
                ]
            }
        },
        "LaunchConfig": {
            "Type": "AWS::AutoScaling::LaunchConfiguration",
            "Properties": {
                "ImageId": "ami-896c96fe",
                "SecurityGroups": [
		    { "Ref": "SecurityGroup" }
		],
                "InstanceType": "t1.micro",
                "IamInstanceProfile": { "Ref": "InstanceProfile" },
                "UserData": {
                    "Fn::Base64": {
                        "Fn::Join": [ "\n", [
                            "#!/usr/bin/env bash",

                            "apt-get -y update",
                            "apt-get -y install language-pack-en python python-pip",

                            "adduser --disabled-password datastash",
                            "curl https://github.com/maxharlow.keys -o /home/ubuntu/.ssh/authorized_keys",
                            "cd /home/datastash",

                            "chown -R datastash /home/datastash",
                            "chgrp -R datastash /home/datastash",

                            { "Fn::Join": [ "; ", [ "echo '@hourly ( date",
                                "curl -O https://s3-eu-west-1.amazonaws.com/datastash/sources.tar.gz",
                                "tar xfv sources.tar.gz",
                                "pip install --user -qr requirements.txt",
                                "for file in scrapers/*",
                                "do $(pwd)/$file",
                                "done",
                                ")' | crontab -u datastash -" ] ] }
                        ] ]
                    }
                }
            }
        },
        "SecurityGroup": {
            "Type": "AWS::EC2::SecurityGroup",
            "Properties": {
                "GroupDescription": "SSH",
                "SecurityGroupIngress": [
                    {
                        "IpProtocol": "tcp",
                        "FromPort": "22",
                        "ToPort": "22",
                        "CidrIp": "0.0.0.0/0"
                    }
                ]
            }
        }
    }
}
